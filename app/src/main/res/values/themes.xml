<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PelaporanK3FT" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueFB</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/notosansjpregular</item>
    </style>

    <style name="TextAppearance.TabsFont" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/notosansjpregular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabLayoutStyle</item>
    </style>

    <style name="TabLayoutAppearance" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textAllCaps">false</item>
    </style>
</resources>