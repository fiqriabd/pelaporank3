<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_11sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    style="@style/CardViewTheme">

        <LinearLayout
            android:id="@+id/card_daftar_insiden"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_column="0"
                        android:text="@string/kode_lapor_insiden_"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11ssp"/>

                    <TextView
                        android:id="@+id/tv_list_data_kode_lapor_insiden"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"/>

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_column="0"
                        android:text="@string/waktu_kejadian_insiden_"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11ssp"/>

                    <TextView
                        android:id="@+id/tv_list_data_waktu_kejadian_insiden"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"/>

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_column="0"
                        android:text="@string/lokasi_insiden_"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11ssp"/>

                    <TextView
                        android:id="@+id/tv_list_data_lokasi_insiden"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"/>

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_column="0"
                        android:text="@string/nama_pelapor_"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11ssp"/>

                    <TextView
                        android:id="@+id/tv_list_nama_pelapor_insiden"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"/>

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_column="0"
                        android:text="@string/nama_korban_"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11ssp"/>

                    <TextView
                        android:id="@+id/tv_list_nama_korban_insiden"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"/>

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_column="0"
                        android:text="@string/status_laporan_"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11ssp"/>

                    <TextView
                        android:id="@+id/tv_list_status_laporan_insiden"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"/>

                </TableRow>
            </TableLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>